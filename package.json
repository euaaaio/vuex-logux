{
  "name": "@logux/vuex",
  "version": "0.9.17",
  "description": "Vuex compatible API for Logux",
  "keywords": [
    "logux",
    "client",
    "vuex",
    "websocket"
  ],
  "scripts": {
    "test": "jest --coverage && eslint . && check-dts && size-limit && yaspeller *.md"
  },
  "author": "Eduard Aksamitov <e@edaks.co>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/vuex",
  "types": "./index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": "^12.0.0 || >=14.0.0"
  },
  "peerDependencies": {
    "@logux/client": "logux/client#next",
    "@logux/core": "^0.6.2",
    "vue": ">=3.0.2",
    "vuex": ">=4.0.0-rc.1"
  },
  "dependencies": {
    "nanoevents": "^5.1.10"
  },
  "devDependencies": {
    "@logux/client": "logux/client#next",
    "@logux/core": "^0.6.2",
    "@logux/eslint-config": "^42.2.1",
    "@logux/sharec-config": "^0.8.4",
    "@size-limit/dual-publish": "^4.7.0",
    "@size-limit/preset-small-lib": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "@vue/test-utils": "^2.0.0-beta.9",
    "check-dts": "^0.4.0",
    "dual-publish": "^0.11.0",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "nanodelay": "^1.0.6",
    "rimraf": "^3.0.2",
    "size-limit": "^4.7.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5",
    "vue": "^3.0.2",
    "vuex": "^4.0.0-rc.1",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint",
    "*.ts": "eslint"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "prettierx/options": [
        0
      ],
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Client + Store",
      "import": {
        "@logux/client": "{ CrossTabClient }",
        "index.js": "{ createStoreCreator }"
      },
      "limit": "11 KB"
    },
    {
      "name": "Client + Store + Helpers",
      "import": {
        "@logux/client": "{ CrossTabClient }",
        "index.js": "{ createStoreCreator, useStore, useSubscription }"
      },
      "limit": "12 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)"
    ],
    "dictionary": [
      "versioning",
      "peerDependencies",
      "npm",
      "vue",
      "GraphQL",
      "io",
      "logux",
      "vuex",
      "mixin",
      "mixinâ€™s",
      "TypeDoc",
      "WebSocket",
      "payload",
      "ES",
      "roadmap",
      "refactor",
      "composable",
      "unsubscribes"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.8.4"
  }
}
