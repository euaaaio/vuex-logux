{
  "name": "@logux/vuex",
  "version": "0.9.17",
  "description": "Vuex compatible API for Logux",
  "keywords": [
    "logux",
    "client",
    "vuex",
    "websocket"
  ],
  "scripts": {
    "test": "jest --coverage && eslint . && check-dts && size-limit && yaspeller *.md"
  },
  "author": "Eduard Aksamitov <e@edaks.co>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/vuex",
  "types": "./index.d.ts",
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": "^12.0.0 || >=14.0.0"
  },
  "peerDependencies": {
    "@logux/client": "logux/client#next",
    "@logux/core": "logux/core#next",
    "@vue/devtools-api": "^6.0.0-beta.6",
    "vue": ">=3.0.5",
    "vuex": ">=4.0.0"
  },
  "dependencies": {
    "nanoevents": "^5.1.10"
  },
  "devDependencies": {
    "@logux/client": "logux/client#next",
    "@logux/core": "logux/core#next",
    "@logux/eslint-config": "^44.1.2",
    "@logux/sharec-config": "^0.8.5",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "@vue/devtools-api": "^6.0.0-beta.6",
    "@vue/test-utils": "^2.0.0-beta.14",
    "check-dts": "^0.4.4",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.17.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^28.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-esm-transformer": "^1.0.0",
    "lint-staged": "^10.5.4",
    "nanodelay": "^1.0.6",
    "size-limit": "^4.9.2",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5",
    "vue": "^3.0.5",
    "vuex": "^4.0.0",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint",
    "*.ts": "eslint"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      ".js": "jest-esm-transformer"
    },
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/devtools/"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "prettierx/options": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Client + Store",
      "import": {
        "@logux/client": "{ CrossTabClient }",
        "./index.js": "{ createStoreCreator }"
      },
      "limit": "11 KB"
    },
    {
      "name": "Client + Store + Helpers",
      "import": {
        "@logux/client": "{ CrossTabClient }",
        "./index.js": "{ createStoreCreator, useStore, useSubscription }"
      },
      "limit": "12 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)"
    ],
    "dictionary": [
      "versioning",
      "peerDependencies",
      "npm",
      "vue",
      "GraphQL",
      "io",
      "logux",
      "vuex",
      "mixin",
      "mixinâ€™s",
      "TypeDoc",
      "WebSocket",
      "payload",
      "ES",
      "roadmap",
      "refactor",
      "composable",
      "unsubscribes",
      "devtools"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.8.5"
  }
}
