{
  "name": "@logux/vuex",
  "version": "0.8.0",
  "description": "Vuex compatible API for Logux",
  "keywords": [
    "logux",
    "client",
    "vuex",
    "websocket"
  ],
  "scripts": {
    "spell": "yaspeller *.md",
    "clean": "rimraf coverage/",
    "test": "jest --coverage && eslint . && check-dts && size-limit && yarn spell"
  },
  "author": "Eduard Aksamitov <e@edaks.co>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/vuex",
  "sideEffects": false,
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "vue": ">=3.0.0-rc.4",
    "vuex": ">=4.0.0-beta.4"
  },
  "dependencies": {
    "@logux/client": "^0.9.1",
    "@logux/core": "^0.6.1",
    "nanoevents": "^5.1.8"
  },
  "devDependencies": {
    "@logux/eslint-config": "^40.0.1",
    "@logux/sharec-config": "^0.6.2",
    "@size-limit/dual-publish": "^4.5.5",
    "@size-limit/preset-small-lib": "^4.5.5",
    "@vue/test-utils": "^2.0.0-beta.0",
    "check-dts": "^0.3.2",
    "docdash": "^1.2.0",
    "dual-publish": "^0.11.0",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.2",
    "eslint-plugin-prettierx": "^0.12.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^21.0.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nanodelay": "^1.0.3",
    "rimraf": "^3.0.2",
    "size-limit": "^4.5.5",
    "vue": "^3.0.0-rc.4",
    "vue-class-component": "^7.2.3",
    "vue-template-compiler": "^2.6.11",
    "vue-typed-mixins": "^0.2.0",
    "vuex": "^4.0.0-beta.4",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "testPathIgnorePatterns": [
      "mixin",
      "install"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "prettierx/options": [
        0
      ]
    }
  },
  "size-limit": [
    {
      "name": "Logux Vuex",
      "import": "{ createLogux }",
      "limit": "10 KB"
    },
    {
      "name": "Helpers",
      "import": "{ loguxMixin, loguxComponent }",
      "limit": "1 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)"
    ],
    "dictionary": [
      "versioning",
      "peerDependencies",
      "npm",
      "vue",
      "GraphQL",
      "io",
      "logux",
      "vuex",
      "mixin",
      "mixinâ€™s",
      "TypeDoc",
      "WebSocket",
      "payload",
      "ES",
      "roadmap",
      "refactor"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.6.2"
  }
}
