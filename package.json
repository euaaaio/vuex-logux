{
  "name": "@logux/vuex",
  "version": "0.9.11",
  "description": "Vuex compatible API for Logux",
  "keywords": [
    "logux",
    "client",
    "vuex",
    "websocket"
  ],
  "scripts": {
    "spell": "yaspeller *.md",
    "clean": "rimraf coverage/",
    "test": "jest --coverage && eslint . && check-dts && size-limit && yarn spell"
  },
  "author": "Eduard Aksamitov <e@edaks.co>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/vuex",
  "sideEffects": false,
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "vue": ">=3.0.0-rc.11",
    "vuex": ">=4.0.0-beta.4"
  },
  "dependencies": {
    "@logux/client": "^0.9.2",
    "@logux/core": "^0.6.1",
    "nanoevents": "^5.1.8"
  },
  "devDependencies": {
    "@logux/eslint-config": "^40.0.4",
    "@logux/sharec-config": "^0.7.4",
    "@size-limit/dual-publish": "^4.6.0",
    "@size-limit/preset-small-lib": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "@vue/test-utils": "^2.0.0-beta.4",
    "check-dts": "^0.3.3",
    "dual-publish": "^0.11.0",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^21.0.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "nanodelay": "^1.0.3",
    "rimraf": "^3.0.2",
    "size-limit": "^4.6.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2",
    "vue": "^3.0.0-rc.11",
    "vuex": "^4.0.0-beta.4",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "prettierx/options": [
        0
      ],
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Store",
      "import": "{ CrossTabClient, createStoreCreator, useStore }",
      "limit": "10 KB"
    },
    {
      "name": "Store + Helpers",
      "import": "{ CrossTabClient, createStoreCreator, useStore, useSubscription, Subscribe }",
      "limit": "11 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)"
    ],
    "dictionary": [
      "versioning",
      "peerDependencies",
      "npm",
      "vue",
      "GraphQL",
      "io",
      "logux",
      "vuex",
      "mixin",
      "mixinâ€™s",
      "TypeDoc",
      "WebSocket",
      "payload",
      "ES",
      "roadmap",
      "refactor",
      "composable",
      "unsubscribes"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.7.4"
  }
}
